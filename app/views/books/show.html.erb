<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="container">
<div class="row">
<div class="col-xs-3">
<h1>User info</h1>

<div class="profile-container">
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
	<table class="table table-striped">
	  <tr>
	    <td><h4>name</h4></td>
	    <td><h4><%= @user.name %></h4></td>
	  </tr>
	  <tr>
	    <td><h4>introduction</h4></td>
	    <td><h4><%= @user.introduction %></h4></td>
	  </tr>
	</table>
	  <% if @user.id == current_user.id %>
	    <%= link_to edit_user_path(current_user) do %><i class="glyphicon glyphicon-wrench"></i><% end %>
	  <% end %>
</div>



<h2>New book</h2>

<%= form_for (@book) do |b| %>

<% if @book.errors.any? %>
  <div>
    <ul style="color: red">
      <% @book.errors.full_messages.each do |message| %>
        <li>error : <%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

	<h4>Title</h4>
	<%= b.text_field :title %>
	<h4>Opinion</h4>
	<%= b.text_area :body %>
	<%= b.submit "Create Book" %>
<% end %>
</div>

<div class="col-xs-9">
<h1>Book detail</h1>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Image</th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
			<tr>
				<td>
					<%= link_to user_path(@booker.user) do %>
						<%= attachment_image_tag @booker.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: " pull-left profile-img", fallback: "no_image.jpg", size:'50x50' %>
						<%= @booker.user.name %>
					<% end %>
				</td>
				<td><%= link_to book_path(@booker) do %><%= @booker.title %><% end %></td>
				<td><%= @booker.body %></td>
				<% if current_user == @booker.user %>
					<td><%= link_to "Edit" , edit_book_path(@booker) %></td>
					<td><%= link_to "Destroy" , book_path(@booker), method: :delete , "data-confirm" => "本当に削除しますか？" %></td>
				<% end %>
			</tr>
	</tbody>
</table>
</div>
</div>
</div>
