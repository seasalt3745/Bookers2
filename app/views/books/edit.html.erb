<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>


<h1>Editing Book</h1>

<%= form_for(@book) do |b| %>

  <% if @book.errors.any? %>
    <div>
      <ul style="color: red">
        <% @book.errors.full_messages.each do |message| %>
          <li>error : <%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h4>Title</h4>
  <%= b.text_field :title %>
  <h4>Opinion</h4>
  <%= b.text_area :body %>
  <%= b.submit 'Update Book' %>
<% end %>

<%= link_to "Show" , book_path(@book) %>
<%= link_to "Back" , books_path %>