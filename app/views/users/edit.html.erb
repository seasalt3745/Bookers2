<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>


<h1>User info</h1>

	<%= form_for(@user) do |f| %>

  <% if @user.errors.any? %>
    <div>
      <ul style="color: red">
        <% @user.errors.full_messages.each do |message| %>
          <li>error : <%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <h4>Name</h4>
    <%= f.text_field :name, autofocus: true %>

    <h4>Image</h4>
    <%= f.attachment_field :profile_image %>

    <h4>Introduction</h4>
    <%= f.text_area :introduction %>
    <%= f.submit "Update User" %>
  <% end %>
