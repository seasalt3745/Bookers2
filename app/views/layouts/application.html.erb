<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="header" id="header">　<!-- text-light bg-dark -->
      <nav class="navbar navbar-inverse" role="navigation" id="slide-nav">
        <div class="container relative">
          <div class="navbar-header">
            <a class="navbar-logo" href="/">
              Bookers
            </a>

            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div id="slidemenu">
            <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
              <% if user_signed_in? %>
                <li class="nav-item">
                  <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                 <%= link_to 'Home', user_path(current_user) %>
                </li>
                <li class="nav-item">
                　<span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                 <%= link_to 'Users', users_path %>
                </li>
                <li class="nav-item">
                  <span class="glyphicon glyphicon-book" aria-hidden="true"></span>
                  <%= link_to 'Books', books_path %>
                </li>
                <li class="nav-item">
                  <span class="glyphicon glyphicon-share" aria-hidden="true"></span>
                  <%= link_to "logout", destroy_user_session_path, method: :delete %>
                </li>
              <% else %>
                <li class="">
                  <%= link_to 'Home', root_path %>
                </li>
                <li class="">
                  <%= link_to "About", homes_about_path %>
                </li>
                <li class="">
                  <%= link_to "sign up", new_user_registration_path %>
                </li>
                <li class="">
                  <%= link_to "login", new_user_session_path %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </div>

    <%= yield %>

    <footer>
      <p>CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
